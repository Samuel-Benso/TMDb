{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "TMDb API Documentation",
  "colors": {
    "primary": "#01B4E4",
    "light": "#90CEA1",
    "dark": "#032541"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "getting-started",
              "api-key"
            ]
          },
          {
            "group": "Error Handling",
            "pages": [
              "error-handling",
              "glossary"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Endpoints",
            "openapi": {
              "source": "/api-reference/openapi.yaml",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community Forum",
          "href": "https://www.themoviedb.org/talk",
          "icon": "comments"
        },
        {
          "anchor": "API Status",
          "href": "https://status.themoviedb.org/",
          "icon": "signal"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/tmdb-light.svg",
    "dark": "/logo/tmdb-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@themoviedb.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://www.themoviedb.org/settings/api"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/themoviedb",
      "github": "https://github.com/themoviedb",
      "linkedin": "https://linkedin.com/company/themoviedb"
    }
  }
}